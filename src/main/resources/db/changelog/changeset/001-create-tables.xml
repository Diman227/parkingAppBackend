<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="creating-tables" author="kent04">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="bookings"/>
            </not>
        </preConditions>
        
        <createTable tableName="bookings">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="rented_spot_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="renter_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="total_price" type="numeric(38,2)">
                <constraints nullable="true"/>
            </column>
            <column name="start_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="end_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <createTable tableName="chats">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="consumer_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="owner_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="coordinates">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="lat" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
            <column name="lon" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="credentials">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="password_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="credentials_password_unique_constraint"/>
            </column>
            <column name="phone_number" type="varchar(16)">
                <constraints nullable="true" unique="true" uniqueConstraintName="credentials_phoneNumber_unique_constraint"/>
            </column>
        </createTable>
        
        <createTable tableName="images">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="external_id" type="varchar(256)"/>
            <column name="spot_id" type="bigint"/>
            <column name="review_id" type="bigint"/>
        </createTable>
        
        <createTable tableName="messages">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="message" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="sent_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="read_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="author_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="image_id" type="bigint">
                <constraints unique="true" uniqueConstraintName="message_image_unique_constraint"/>
            </column>
            <column name="reply_to_message_id" type="bigint"/>
        </createTable>

        <createTable tableName="passwords">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="password" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="reviews">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="message" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="rate" type="numeric(11,10)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="author_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="review_author_unique_constraint"/>
            </column>
            <column name="spot_id" type="bigint" >
                <constraints nullable="true" unique="true" uniqueConstraintName="review_spot_unique_constraint"/>
            </column>
        </createTable>

        <createTable tableName="spots">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="description" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="numeric(16,2)">
                <constraints nullable="true"/>
            </column>
            <column name="rate" type="numeric(7,5)"/>
            <column name="created_at" type="timestamp(6) without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="owner_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="coordinates_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="spot_coordinates_unique_constraint"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="name" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="surname" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints nullable="true" unique="true" uniqueConstraintName="email_unique_constraint"/>
            </column>
            <column name="credentials_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="credentials_unique_constraint"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>